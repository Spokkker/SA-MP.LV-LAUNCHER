<Window x:Class="Launcher.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:Launcher.UI.Views"
        Title="SA-MP Launcher" Height="600" Width="900">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="140" />
        </Grid.RowDefinitions>
        <TabControl Grid.Row="0">
            <TabItem Header="Dashboard">
                <views:DashboardView />
            </TabItem>
            <TabItem Header="Mods">
                <views:ModsView />
            </TabItem>
            <TabItem Header="Servers">
                <views:ServersView />
            </TabItem>
            <TabItem Header="Settings">
                <views:SettingsView />
            </TabItem>
        </TabControl>
        <GroupBox Grid.Row="1" Header="Logs" Margin="10">
            <ListBox ItemsSource="{Binding Logs}" />
        </GroupBox>
    </Grid>
</Window>
