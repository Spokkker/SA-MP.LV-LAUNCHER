<UserControl x:Class="Launcher.UI.Views.DashboardView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="400">
    <Grid Margin="10">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <StackPanel>
            <TextBlock Text="Launcher Status" FontSize="16" FontWeight="Bold" />
            <TextBlock Text="{Binding Dashboard.Status}" Margin="0,8,0,16" />
            <StackPanel Orientation="Horizontal" Spacing="10">
                <Button Content="Play" Command="{Binding Dashboard.PlayCommand}" Width="100" />
                <Button Content="Check Updates" Command="{Binding Dashboard.CheckUpdatesCommand}" Width="140" />
            </StackPanel>
        </StackPanel>
        <StackPanel Grid.Column="1">
            <TextBlock Text="Auto Update" FontSize="16" FontWeight="Bold" />
            <TextBlock Text="Automatic updates keep your launcher current." TextWrapping="Wrap" />
        </StackPanel>
    </Grid>
</UserControl>
