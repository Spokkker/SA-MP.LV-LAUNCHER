<UserControl x:Class="Launcher.UI.Views.ModsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="300" d:DesignWidth="400">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal" Spacing="8">
            <Button Content="Refresh" Command="{Binding Mods.RefreshCommand}" Width="100" />
        </StackPanel>
        <ListView Grid.Row="1" ItemsSource="{Binding Mods.Mods}" Margin="0,8,0,0">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Mod" DisplayMemberBinding="{Binding Name}" Width="160" />
                    <GridViewColumn Header="Version" DisplayMemberBinding="{Binding InstalledVersion}" Width="120" />
                    <GridViewColumn Header="Enabled">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <CheckBox IsChecked="{Binding Enabled, Mode=TwoWay}" Content="On" />
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                    <GridViewColumn Header="Actions" Width="200">
                        <GridViewColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal" Spacing="8">
                                    <Button Content="Enable" Command="{Binding DataContext.Mods.EnableModCommand, RelativeSource={RelativeSource AncestorType=ListView}}" CommandParameter="{Binding Name}" />
                                    <Button Content="Disable" Command="{Binding DataContext.Mods.DisableModCommand, RelativeSource={RelativeSource AncestorType=ListView}}" CommandParameter="{Binding Name}" />
                                </StackPanel>
                            </DataTemplate>
                        </GridViewColumn.CellTemplate>
                    </GridViewColumn>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</UserControl>
